page {
  font-family: SimHei;
}
.content {
  min-height: 100vh;
  background-color: #f8f8f8;
  overflow: hidden;
}
.content .tips {
  text-align: center;
  font-size: 24rpx;
}
.content .energy-container {
  width: 700rpx;
  height: auto;
  border-radius: 20rpx;
  margin: 25rpx auto;
  background-color: #00a0e9;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content .energy-container .energy-header {
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.content .energy-container .energy-header_title {
  font-size: 60rpx;
  text-align: center;
  margin-top: 50rpx;
  font-weight: bolder;
}
.content .energy-container .energy-header_desc {
  font-size: 20rpx;
  text-align: center;
  font-weight: bolder;
  word-spacing: 40rpx;
  letter-spacing: 4rpx;
  margin-top: 10rpx;
}
.content .energy-container .energy-label, .content .energy-container .energy-detail {
  width: 660rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
}
.content .energy-container .energy-label {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
  margin-top: 50rpx;
}
.content .energy-container .energy-label__scale {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.content .energy-container .energy-label .energy-custom {
  width: 250rpx;
  height: 250rpx;
  margin-top: 20rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.content .energy-container .energy-label .worker-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: SimHei;
}
.content .energy-container .energy-label .worker-info_input {
  text-align: right;
  font-weight: bold;
  font-size: 28rpx;
}
.content .energy-container .energy-detail {
  color: #000;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 25rpx;
}
.content .energy-container .energy-detail_field {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.content .energy-container .energy-detail_field .field-left {
  text-align: left;
  width: 70%;
}
.content .energy-container .energy-detail_field .field-right {
  text-align: right;
  width: 30%;
}
.content .energy-container .energy-detail_field:nth-child(1) {
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #333;
}
.content .energy-container .energy-footer {
  text-align: center;
  padding: 10px;
  font-size: 12px;
  color: #fff;
  width: 100%;
}
.content .operate {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: start;
}
.content .operate .tips {
  font-size: 24rpx;
  color: #333;
}
.content .operate .download {
  width: 140rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #00a0e9;
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}